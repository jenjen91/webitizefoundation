template(name="updatepost")
  h4 Nytt innlegg
  +addpostNav
  
  div#send-message(class="#{successClass} #{genErrorClass}")
    p#error-text 
      | #{seMessage}
  form#updatepost     
    .form-group
      label Blogg tittel *
      input#post-title.form-control(type='text', name='post_title', value='#{post_title}' class="{{errorClass 'post_title'}}")
      span.help-block {{errorMessage 'post_title'}}
      
    .form-group
      label Blogg url *
      small Obs. ikke bruk mellomrom eller store bokstaver
      input#post-url.form-control(type='text', name='post_url', value='#{post_url}' class="{{errorClass 'post_url'}}")
      span.help-block {{errorMessage 'post_url'}}
      
    .form-group
      label Blogg text 
      span.help-block {{errorMessage 'post_text'}}
      textarea.form-control(name='post_text' class="{{errorClass 'post_text'}}")
        | #{post_text}
    
    .form-group
      label Thumbnail
      input.form-control(type='text', name='post_thumb', value='#{post_thumb}')
    
    .form-group
      label Featured *
      span.help-block {{errorMessage 'post_featured'}}
      input.radio(type='radio', name='post_featured', value='no' class="{{errorClass 'post_featured'}}" checked='')
      span no
    
      input.radio(type='radio', name='post_featured', value='yes' class="{{errorClass 'post_featured'}}" chekced='')
      span yes
  
    .form-group
      input.btn.btn-default(type='submit', value='Lagre')
